package main;
import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class procesor {
	/**
	 * Procesor registers
	 */
	private int ptr;
	private int mr;
	private int ip;
	private int cs;
	private int ds;
	private int sp;
	/*
	 * interrupts
	 */
	private int si;
	private int ti;
	private int ioi;
	private int pi;
	/*
	 * procesor mode
	 */
	private int mode;
	
	private memory RAM;
	private channelMechanism channel;
	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
	public void inicialize() {
		this.setCs(0000);
		this.setDs(0000);
		this.setIoi(0000);
		this.setIp(0000);
		this.setMode(1);
		this.setMr(0000);
		this.setPi(0000);
		this.setPtr(0000);
		this.setSi(0000);
		this.setSp(0000);
		this.setTi(0000);
		this.createMemory();
		channel = new channelMechanism();
	}
	
	public void createMemory() {
		this.RAM = new memory();
		this.RAM.inicializeMemory();
	}
	
	public void inputDevice() {
		
	}
	
	public void freeMemory(int memoryType, int block, int word) {
		if (memoryType == 1){
			this.RAM.setSuperVisorMemory(block, word, "0");
		}
		if (memoryType == 2) {
			this.RAM.setUserMemory(block, word, "0");
		}
	}
	
	public int isCommand(String word) {
		
		int commandType = 0;
		switch (word) {
				/*
				 * 
				 */
	        case "ADDS":  commandType = 1;
                break;
	        case "SUBS":  commandType = 1;
            	break;
	        case "MULS":  commandType = 1;
            	break;
	        case "DIVS":  commandType = 1;
	        	break;
	        case "ADDR":  commandType = 1;
            	break;
	        case "SUBR":  commandType = 1;
        		break;
	        case "MULR":  commandType = 1;
            	break;
	        case "DIVR":  commandType = 1;
            	break;
		        /*
		         * 
		         */
	        case "PUSH":  commandType = 1;
            	break;
	        case "POP":  commandType = 1;
	        	break;
	        	/**
	        	 * 
	        	 */
	        case "CMPS":  commandType = 1;
            	break;
	        case "CMPR":  commandType = 1;
            	break;
            	/**
            	 * 
            	 */
	        case "JMP":  commandType = 1;
            	break;
            	/**
            	 * 
            	 */
	        case "READ":  commandType = 1;
            	break;
	        case "PRINT":  commandType = 1;
            	break;
	        case "LOAD":  commandType = 1;
	        	break;
	        case "WRITE":  commandType = 1;
            	break;
            	/**
            	 * 
            	 */
	        case "HALT":  commandType = 1;
        		break;
	        case "MOV":  commandType = 1;
        		break;
	        default: commandType = 0;
                break;
	    }
		return commandType;
	}
	
	public memory getRAM() {
		return RAM;
	}

	public void setRAM(memory rAM) {
		RAM = rAM;
	}

	public void loadFile() {
		try (BufferedReader br = new BufferedReader(new FileReader("C:\\Users\\KD\\Desktop\\2013-02-17\\2013-02-17_13-50-37.txt")))
		{
			String sCurrentLine;
			
			while ((sCurrentLine = br.readLine()) != null) {
				
			}
		} catch (IOException e) {
			e.printStackTrace();
		} 
	}
	
	public int getPtr() {
		return ptr;
	}

	public void setPtr(int ptr) {
		this.ptr = ptr;
	}

	public int getMr() {
		return mr;
	}

	public void setMr(int mr) {
		this.mr = mr;
	}

	public int getIp() {
		return ip;
	}

	public void setIp(int ip) {
		this.ip = ip;
	}

	public int getCs() {
		return cs;
	}

	public void setCs(int cs) {
		this.cs = cs;
	}

	public int getDs() {
		return ds;
	}

	public void setDs(int ds) {
		this.ds = ds;
	}

	public int getSp() {
		return sp;
	}

	public void setSp(int sp) {
		this.sp = sp;
	}

	public int getSi() {
		return si;
	}

	public void setSi(int si) {
		this.si = si;
	}

	public int getTi() {
		return ti;
	}

	public void setTi(int ti) {
		this.ti = ti;
	}

	public int getIoi() {
		return ioi;
	}

	public void setIoi(int ioi) {
		this.ioi = ioi;
	}

	public int getPi() {
		return pi;
	}

	public void setPi(int pi) {
		this.pi = pi;
	}

	public int getMode() {
		return mode;
	}

	public void setMode(int mode) {
		this.mode = mode;
	}

}
